<% content_for :title, "新しいパスワードの設定" %>

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        新しいパスワードの設定
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        <%= @admin.email %> のパスワードを変更します
      </p>
    </div>

    <%= form_with model: @admin, url: admin_password_reset_path(token: params[:token]), method: :patch, local: true, class: "mt-8 space-y-6" do |form| %>
      <div class="rounded-md shadow-sm space-y-4">
        <div>
          <%= form.label :password, "新しいパスワード", class: "block text-sm font-medium text-gray-700" %>
          <%= form.password_field :password,
                                  required: true,
                                  minlength: 8,
                                  class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm spec--new-password",
                                  placeholder: "8文字以上で入力してください" %>
        </div>

        <div>
          <%= form.label :password_confirmation, "パスワード確認", class: "block text-sm font-medium text-gray-700" %>
          <%= form.password_field :password_confirmation,
                                  required: true,
                                  minlength: 8,
                                  class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm spec--confirm-password",
                                  placeholder: "同じパスワードを再入力してください" %>
        </div>
      </div>

      <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
        <div class="flex">
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">
              パスワード設定のご注意
            </h3>
            <div class="mt-2 text-sm text-yellow-700">
              <ul class="list-disc list-inside space-y-1">
                <li>8文字以上で設定してください</li>
                <li>英数字を組み合わせることを推奨します</li>
                <li>他のサービスで使用していないパスワードを設定してください</li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <div>
        <%= form.submit "パスワードを変更する",
                        class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 spec--update-password" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= link_to "ログイン画面に戻る", admin_login_path,
                  class: "font-medium text-indigo-600 hover:text-indigo-500 spec--back-to-login" %>
    </div>
  </div>
</div>
