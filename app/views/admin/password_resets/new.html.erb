<% content_for :title, "パスワードリセット" %>

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        パスワードリセット
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        登録されているメールアドレスを入力してください。<br>
        パスワードリセット用のリンクをお送りします。
      </p>
    </div>

    <%= form_with url: admin_password_resets_path, method: :post, local: true, class: "mt-8 space-y-6" do |form| %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= form.label :email, "メールアドレス", class: "sr-only" %>
          <%= form.email_field :email,
                               required: true,
                               class: "appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
                               placeholder: "メールアドレス" %>
        </div>
      </div>

      <div>
        <%= form.submit "パスワードリセットメールを送信",
                        class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 spec--password-reset-submit" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= link_to "ログイン画面に戻る", admin_login_path,
                  class: "font-medium text-indigo-600 hover:text-indigo-500 spec--back-to-login" %>
    </div>
  </div>
</div>
