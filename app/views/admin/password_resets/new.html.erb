<% content_for :title, "パスワードリセット" %>

<main class="mt-16" role="main">
  <section class="a--card is--lg spec--password-reset-form max-w-md mx-auto">
    <header>
      <h1 class="a--heading is--xl text-center mb-6 spec--password-reset-title">パスワードリセット</h1>
      <p class="text-center text-sm text-muted mb-6">
        登録されているメールアドレスを入力してください。<br>
        パスワードリセット用のリンクをお送りします。
      </p>
    </header>

    <%= form_with url: admin_password_resets_path, method: :post, local: true, class: "space-y-4", aria_labelledby: "password-reset-title" do |form| %>
      <fieldset>
        <legend class="sr-only">パスワードリセット情報</legend>

        <div class="l--form-items">
          <%= render FormFieldComponent.new(
            form: form,
            field: :email,
            label: "メールアドレス",
            type: "email",
            required: true,
            spec_class: "spec--email-input",
            autocomplete: "email"
          ) %>
        </div>

        <%= render FormActionsComponent.new(
          form: form,
          primary_label: "パスワードリセットメールを送信",
          primary_class: "spec--password-reset-submit"
        ) %>

        <div class="text-center mt-4">
          <%= link_to "ログイン画面に戻る", admin_login_path,
                      class: "text-sm text-blue-600 hover:text-blue-500 underline spec--back-to-login" %>
        </div>
      </fieldset>
    <% end %>
  </section>
</main>
