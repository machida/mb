<article>
  <header>
    <div class="flex justify-between items-start mb-2">
      <div class="flex items-center gap-3">
        <span class="<%= status_badge_class(admin_article_item) %>">
          <%= status_text(admin_article_item) %>
        </span>
        <h2 class="text-xl font-semibold">
          <%= link_to admin_article_item.title, link_path_for_article(admin_article_item), class: "hover-text-link text-primary" %>
        </h2>
      </div>
    </div>
    
    <div class="flex items-center gap-4 text-sm text-gray-500 mb-2">
      <span>著者: <%= admin_article_item.author %></span>
      <time datetime="<%= admin_article_item.created_at.iso8601 %>">
        <%= format_date_with_weekday(admin_article_item.created_at) %>
      </time>
      <% if admin_article_item.updated_at != admin_article_item.created_at %>
        <time datetime="<%= admin_article_item.updated_at.iso8601 %>">
          （<%= format_date_with_weekday(admin_article_item.updated_at) %> 更新）
        </time>
      <% end %>
    </div>
  </header>

  <% if admin_article_item.summary.present? %>
    <p class="mb-4 text-muted text-sm spec--article-summary"><%= truncate(admin_article_item.summary, length: 150) %></p>
  <% end %>

  <footer class="flex justify-end gap-2">
    <%= link_to "編集", edit_admin_article_path(admin_article_item), class: "a--button is-sm is-border-secondary" %>
  </footer>
</article>
