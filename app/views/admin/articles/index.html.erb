<%= render PageTitleComponent.new(title: "記事一覧") %>
<div class="a--page-body py-6">
  <div class="l--container is-md">
    <div class="flex justify-center items-center mb-8">
      <%= render ArticleNavigationComponent.new %>
    </div>

    <div class="flex justify-between items-center mb-8">
      <div class="flex items-center gap-4">
        <h1 class="text-3xl font-bold spec--article-index-title spec--draft-section-title">全ての記事</h1>
        <span class="a--badge is-primary is-md">
          <%= @articles.count %>件
        </span>
      </div>
    </div>

    <% if @articles.any? %>
      <%= render "article_list",
          articles: @articles,        list_class: "spec--published-articles-list",        delete_button_class: "spec--delete-button" %>
    <% else %>
      <%= render "empty_state",
          message: "記事がありません",        submessage: nil,        show_icon: false %>
    <% end %>

    <!-- Pagination -->
    <div class="mt-8 flex justify-center spec--pagination">
      <%= paginate @articles %>
    </div>
  </div>
</div>
