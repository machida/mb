<%= render PageTitleComponent.new(title: "下書き記事") %>
<div class="a--page-body py-6">
  <div class="l--container is-md">
    <div class="mb-6">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h1 class="text-3xl font-bold mb-2"><%= @article.title %></h1>
          <div class="flex items-center gap-4 text-sm text-gray-500">
            <span>著者: <%= @article.author %></span>
            <span>作成日: <%= format_date_with_weekday(@article.created_at) %></span>
            <span class="a--badge is-xs <%= @article.draft? ? 'is-warning' : 'is-info' %>">
              <%= @article.draft? ? "下書き" : "公開中" %>
            </span>
          </div>
        </div>
        <div class="flex gap-2">
          <%= link_to "編集", edit_admin_article_path(@article), class: "a--button is-md is-border-secondary" %>
          <%= link_to "削除", admin_article_path(@article), method: :delete,                    data: { confirm: "本当に削除しますか？" }, class: "a--button is-md is-danger" %>
        </div>
      </div>
    </div>

    <% if @article.summary.present? %>
      <div class="a--card is-secondary mb-6">
        <h2 class="text-lg font-semibold mb-2">概要</h2>
        <p><%= @article.summary %></p>
      </div>
    <% end %>

    <div class="a--markdown-body">
      <%= markdown(@article.body) %>
    </div>

    <div class="mt-8 pt-4 border-t flex gap-2">
      <%= link_to "記事管理に戻る", admin_articles_path, class: "a--button is-md is-border-secondary" %>
      <% unless @article.draft? %>
        <%= link_to "公開ページを見る", article_path(@article), class: "a--button is-md is-primary" %>
      <% end %>
    </div>
  </div>
</div>
