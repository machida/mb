<%= render PageTitleComponent.new(
      title: "記事一覧",
      action_button: link_to("新しい記事を作成", new_admin_article_path, class: "a--button is--md is--primary spec--new-article-button")
    ) %>
<div class="a--page-body py-6">
  <div class="l--container is--md">
    <div class="flex justify-center items-center mb-8">
      <%= render ArticleNavigationComponent.new %>
    </div>

    <% if @articles.any? %>
      <%= render "article_list",
                 articles: @articles, list_class: "spec--draft-articles-list" %>
    <% else %>
      <%= render "empty_state",
                 message: "下書きの記事がありません", submessage: "新しい記事を作成して下書き保存してみましょう", show_icon: true %>
    <% end %>

    <!-- Pagination -->
    <div class="mt-8 flex justify-center spec--pagination">
      <%= paginate @articles %>
    </div>
  </div>
</div>
