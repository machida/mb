<%= render PageTitleComponent.new(title: "パスワード変更", title_class: "spec--password-edit-title") %>

<div class="a--page-body py-6">
  <div class="spec--password-edit-container l--container is-sm">
    <%= form_with model: @admin, url: admin_password_path, local: true, class: "space-y-6" do |f| %>
      <%= render AlertComponent.new(type: :danger, messages: @admin.errors.full_messages, spec_class: "spec--error-messages") if @admin.errors.any? %>

      <div class="a--card">
        <h2 class="text-xl font-semibold mb-4 spec--password-section-title">パスワード変更</h2>
        <p class="text-sm text-gray-500 mb-4">新しいパスワードを入力してください。</p>

        <div class="l--form-items">
          <%= render FormFieldComponent.new(
            form: f,
            field: :password,
            label: "新しいパスワード",
            type: "password",
            required: true,
            help_text: "8文字以上で設定してください。",
            spec_class: "spec--password-input",
            autocomplete: "new-password"
          ) %>
          <%= render FormFieldComponent.new(
            form: f,
            field: :password_confirmation,
            label: "パスワード確認",
            type: "password",
            required: true,
            help_text: "確認のため同じパスワードを入力してください。",
            spec_class: "spec--password-confirmation-input",
            autocomplete: "new-password"
          ) %>
        </div>
      </div>

      <%= render FormActionsComponent.new(
        form: f,
        primary_label: "パスワードを変更",
        primary_class: "spec--update-button spec--password-change-button",
        cancel_path: edit_admin_profile_path
      ) %>
    <% end %>
  </div>
</div>
