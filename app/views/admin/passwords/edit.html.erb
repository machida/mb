<%= render PageTitleComponent.new(title: "パスワード変更", title_class: "spec--password-edit-title") %>

<div class="a--page-body py-6">
  <div class="spec--password-edit-container l--container is-sm">
    <%= form_with model: @admin, url: admin_password_path, local: true, class: "space-y-6" do |f| %>
      <%= render AlertComponent.new(type: :danger, messages: @admin.errors.full_messages, spec_class: "spec--error-messages") if @admin.errors.any? %>

      <div class="a--card">
        <h2 class="text-xl font-semibold mb-4 spec--password-section-title">パスワード変更</h2>
        <p class="text-sm text-gray-500 mb-4">新しいパスワードを入力してください。</p>

        <div class="l--form-items">
          <div class="l--form-item">
            <%= f.label :password, "新しいパスワード", class: "a--form-label mb-2" %>
            <%= f.password_field :password, required: true,                              class: "a--text-input spec--password-input" %>
            <p class="a--form-help mt-1">8文字以上で設定してください</p>
          </div>

          <div class="l--form-item">
            <%= f.label :password_confirmation, "パスワード確認", class: "a--form-label mb-2" %>
            <%= f.password_field :password_confirmation, required: true,                              class: "a--text-input spec--password-confirmation-input" %>
            <p class="a--form-help mt-1">確認のため同じパスワードを入力してください</p>
          </div>
        </div>
      </div>

      <div class="l--form-actions">
        <ul>
          <li><%= f.submit "パスワードを変更", class: "a--button is-lg is-primary is-flex spec--update-button spec--password-change-button" %></li>
          <li><%= link_to "キャンセル", edit_admin_profile_path, class: "a--button is-lg is-border-secondary is-flex spec--cancel-button" %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
