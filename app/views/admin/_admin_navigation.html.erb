<nav aria-label="管理メニュー">
  <ul class="flex items-center gap-4">
    <li>
      <%= link_to "サイトを表示", root_path, class: "text-primary text-sm" %>
    </li>

    <% if current_user_signed_in? %>
      <li>
        <%= link_to admin_articles_path, class: "text-gray-500 hover:text-gray-700 p-2", aria_label: "記事管理" do %>
          <span class="material-symbols-outlined" aria-hidden="true">table_chart</span>
        <% end %>
      </li>

      <li>
        <%= link_to admin_site_settings_path, class: "text-gray-500 hover:text-gray-700 p-2", aria_label: "サイト設定" do %>
          <span class="material-symbols-outlined" aria-hidden="true">settings</span>
        <% end %>
      </li>

      <li>
        <%= link_to admin_admins_path, class: "text-gray-500 hover:text-gray-700 p-2", aria_label: "管理者管理" do %>
          <span class="material-symbols-outlined" aria-hidden="true">group</span>
        <% end %>
      </li>

      <li>
        <div class="a--dropdown">
          <button class="a--dropdown-button js-dropdown-button spec--dropdown-button"
                  aria-expanded="false"
                  aria-haspopup="true"
                  aria-controls="user-menu"
                  aria-label="ユーザーメニューを開く">
            <span class="material-symbols-outlined" aria-hidden="true">person</span>
          </button>
          <div class="a--dropdown-menu js-dropdown-menu" id="user-menu" role="menu">
            <%= link_to edit_admin_profile_path, class: "a--dropdown-menu-item spec--profile-edit-link", role: "menuitem" do %>
              プロフィール編集
            <% end %>
            <div class="a--dropdown-menu-separator" role="separator"></div>
            <%= button_to "サインアウト", admin_logout_path, method: :delete,
                          class: "a--dropdown-menu-item spec--logout-button w-full text-left bg-transparent border-0 cursor-pointer", role: "menuitem" %>
          </div>
        </div>
      </li>

      <li>
        <%= link_to "新しい記事を作成", new_admin_article_path, class: "a--button is-md is-border-secondary spec--new-article-link" %>
      </li>
    <% end %>
  </ul>
</nav>
