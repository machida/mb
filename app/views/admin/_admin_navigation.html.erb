<% if current_user_signed_in? %>
  <nav aria-label="管理メニュー" class="l--admin-nav bg-sky-800 spec--admin-header fixed z-50 bottom-0 left-0 right-0 h-16 md:top-0 md:bottom-0 md:left-0 md:right-auto md:w-[100px] md:h-auto">
    <ul class="flex flex-row md:flex-col items-stretch md:items-stretch justify-around md:justify-start gap-0 md:gap-0 h-full md:h-auto py-0 md:py-0">
      <li class="flex-1 md:flex-none">
        <%= link_to admin_articles_path, class: "text-sky-400 hover:text-white p-2 md:py-4 flex flex-col items-center justify-center gap-1 h-full md:w-full #{controller_name == 'articles' ? 'is--active' : ''}", aria_label: "記事管理" do %>
