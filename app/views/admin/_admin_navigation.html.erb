      </li>

      <li class="flex-1 md:flex-none">
        <%= link_to admin_site_settings_path, class: "text-sky-400 hover:text-white p-2 md:py-4 flex flex-col items-center justify-center gap-1 h-full md:w-full #{controller_name == 'site_settings' ? 'is--active' : ''}", aria_label: "サイト設定" do %>
