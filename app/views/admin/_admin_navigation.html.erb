        <%= link_to admin_admins_path, class: "text-sky-400 hover:text-white p-2 md:py-4 flex flex-col items-center justify-center gap-1 h-full md:w-full #{controller_name == 'admins' ? 'is--active' : ''}", aria_label: "管理者管理" do %>
          <span class="material-symbols-outlined text-2xl" aria-hidden="true">group</span>
          <span class="text-xs">管理者</span>
        <% end %>
      </li>
