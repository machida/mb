<main class="mt-16" role="main">
  <section class="a--card is-lg spec--login-form max-w-md mx-auto">
    <header>
      <h1 class="a--heading is-xl text-center mb-6 spec--login-title">管理者ログイン</h1>
    </header>

    <% if flash[:alert] %>
      <div class="mb-4" role="alert" aria-live="polite">
        <%= render AlertComponent.new(type: :danger, message: flash[:alert], spec_class: "spec--error-alert") %>
      </div>
    <% end %>

    <%= form_with url: admin_login_path, local: true, class: "space-y-4", aria_labelledby: "login-title" do |f| %>
      <fieldset>
        <legend class="sr-only">ログイン情報</legend>

        <div class="l--form-items">
          <div class="l--form-item">
            <%= f.label :email, "メールアドレス", class: "a--form-label mb-2 spec--email-label" %>
            <%= f.email_field :email,
                              required: true,
                              class: "a--text-input spec--email-input",
                              aria_required: "true",
                              autocomplete: "email" %>
          </div>

          <div class="l--form-item">
            <%= f.label :password, "パスワード", class: "a--form-label mb-2 spec--password-label" %>
            <%= f.password_field :password,
                                 required: true,
                                 class: "a--text-input spec--password-input",
                                 aria_required: "true",
                                 autocomplete: "current-password" %>
          </div>
        </div>

        <div class="l--form-actions">
          <ul>
            <li><%= f.submit "ログイン", class: "a--button is-lg is-primary is-flex spec--login-button" %></li>
          </ul>
        </div>

        <div class="text-center mt-4">
          <%= link_to "パスワードを忘れた場合", new_admin_password_reset_path,
                      class: "text-sm text-blue-600 hover:text-blue-500 underline spec--forgot-password-link" %>
        </div>
      </fieldset>
    <% end %>
  </section>
</main>
