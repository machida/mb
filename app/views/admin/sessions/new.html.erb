<div class="mt-16 a--card is-lg spec--login-form max-w-md mx-auto">
  <h1 class="text-2xl font-bold text-center mb-6 spec--login-title">管理者ログイン</h1>

  <% if flash[:alert] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with url: admin_login_path, local: true, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :email, "メールアドレス", class: "block text-sm font-medium mb-1 spec--email-label" %>
      <%= f.email_field :email, required: true, class: "a--text-input spec--email-input" %>
    </div>

    <div>
      <%= f.label :password, "パスワード", class: "block text-sm font-medium mb-1 spec--password-label" %>
      <%= f.password_field :password, required: true, class: "a--text-input spec--password-input" %>
    </div>

    <div>
      <%= f.submit "ログイン", class: "a--button is-lg is-primary is-flex spec--login-button" %>
    </div>
  <% end %>
</div>
