<!-- Main Visual Header for Top Page -->
<header class="a--hero">
  <%= image_tag "https://plus.unsplash.com/premium_photo-1673002094029-7b23531aa342?q=80&w=2340&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
                alt: "Main Visual", class: "a--hero__image" %>
  <div class="l--container is-lg text-center">
    <div class="a--hero__inner flex flex-col items-center justify-center gap-8">
      <h1 class="a--heading is-xxxl spec--main-title">
        <%= SiteSetting.site_title %>
      </h1>
      <% if SiteSetting.top_page_description.present? %>
        <p class="text-white max-w-2xl mx-auto">
          <%= SiteSetting.top_page_description %>
        </p>
      <% end %>
    </div>
  </div>
</header>
