<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>
<% if page.current? %>
  <span class="a--pager__item is-current border border-gray-500 bg-white text-primary rounded-md font-medium spec--current-page">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, {
    remote: remote,
    rel: page.rel,
    class: "a--pager__item is-link bg-white rounded-md  hover:bg-gray-50 transition-colors spec--page-link"
  } %>
<% end %>
