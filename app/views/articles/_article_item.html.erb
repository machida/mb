<article class="<%= local_assigns[:css_class] || 'spec--article-item' %>">
  <div class="flex flex-col justify-between items-start gap-2 mb-2">
    <h2 class="<%= local_assigns[:title_class] || 'text-2xl font-bold' %> spec--article-title">
      <%= link_to article_item.title, article_path(article_item),
                  class: "hover-text-link text-primary" %>
    </h2>
    <time class="text-gray-500 text-sm whitespace-nowrap spec--article-date">
      <%= format_date_with_weekday(article_item.created_at) %>
    </time>
  </div>

  <% if article_item.summary.present? %>
    <p class="text-muted text-sm spec--article-summary"><%= article_item.summary %></p>
  <% end %>

  <% if show_author_info? %>
    <div class="flex justify-between items-center">
      <span class="text-sm text-gray-500 spec--article-author">著者: <%= article_item.author %></span>
    </div>
  <% end %>
</article>