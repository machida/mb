<div class="flex items-center gap-4">
  <% if current_user_signed_in? %>
    <%= link_to admin_articles_path, class: "text-gray-500 hover:text-gray-700 p-2", title: "記事管理" do %>
      <span class="material-icons">table_chart</span>
    <% end %>

    <%= link_to admin_site_settings_path, class: "text-gray-500 hover:text-gray-700 p-2", title: "サイト設定" do %>
      <span class="material-icons">settings</span>
    <% end %>

    <div class="a--dropdown">
      <button class="a--dropdown-button js-dropdown-button spec--dropdown-button" aria-expanded="false" title="ユーザーメニュー">
        <span class="material-icons">person</span>
      </button>
      <div class="a--dropdown-menu js-dropdown-menu">
        <%= link_to edit_admin_profile_path, class: "a--dropdown-menu-item spec--profile-edit-link" do %>
          プロフィール編集
        <% end %>
        <div class="a--dropdown-menu-separator"></div>
        <%= button_to "サインアウト", admin_logout_path, method: :delete,
                     class: "a--dropdown-menu-item spec--logout-button w-full text-left bg-transparent border-0 cursor-pointer" %>
      </div>
    </div>

    <%= link_to "新しい記事を作成", new_admin_article_path, class: "a--button is-md is-border-secondary spec--new-article-link" %>
  <% end %>
</div>
