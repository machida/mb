<div class="a--image-upload" <%= tag.attributes(controller_data) %>>
  <!-- Hidden file input -->
  <input type="file" accept="<%= accept %>" class="hidden" data-thumbnail-upload-target="input" data-action="change->thumbnail-upload#fileSelected">

  <!-- Hidden URL field -->
  <% if form %>
    <%= form.text_field field_name, class: input_classes, data: { thumbnail_upload_target: "url" } %>
  <% else %>
    <input type="hidden" name="<%= field_name %>" class="<%= input_classes %>" data-thumbnail-upload-target="url">
  <% end %>

  <!-- Drop zone -->
  <div class="<%= dropzone_classes %>" data-thumbnail-upload-target="dropzone">
    <div class="flex flex-col items-center justify-center text-center px-4">
      <span class="material-symbols-outlined a--image-upload__icon">
        cloud_upload
      </span>
      <p class="a--image-upload__text">
        画像をドラッグ&ドロップ
      </p>
      <button type="button" class="a--button is--md is--primary" data-action="click->thumbnail-upload#selectFile">
        ファイルを選択
      </button>
      <div class="a--form-help mt-2">
        <p><%= help_text %></p>
      </div>
    </div>
  </div>

  <!-- Preview area -->
  <div class="<%= preview_area_classes %>" data-thumbnail-upload-target="previewArea">
    <img data-thumbnail-upload-target="preview" src="<%= preview_image_src %>" class="<%= preview_classes %>" alt="">
    <div class="<%= clear_button_container_classes %>">
      <button type="button" class="a--button is--sm is--secondary" data-action="click->thumbnail-upload#clearThumbnail" data-thumbnail-upload-target="clearButton">
        画像を削除
      </button>
    </div>
  </div>

  <% if enable_crop %>
    <!-- Crop Modal -->
    <div class="a--modal is--hidden" data-thumbnail-upload-target="cropModal">
      <div class="a--modal__overlay" data-action="click->thumbnail-upload#cancelCrop"></div>
      <div class="a--modal__content is--lg">
        <div class="a--modal__header">
          <h2 class="a--modal__title">画像のトリミング</h2>
          <button type="button" class="a--modal__close" data-action="click->thumbnail-upload#cancelCrop">
            <span class="material-symbols-outlined">close</span>
          </button>
        </div>
        <div class="a--modal__body">
          <div class="a--crop-container">
            <img data-thumbnail-upload-target="cropImage" src="" alt="Crop preview" class="a--crop-image">
          </div>
        </div>
        <div class="a--modal__footer">
          <button type="button" class="a--button is--md is--secondary" data-action="click->thumbnail-upload#cancelCrop">
            キャンセル
          </button>
          <button type="button" class="a--button is--md is--primary" data-action="click->thumbnail-upload#confirmCrop">
            確定
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>
